<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/widget79"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_weight="0."
        android:src="@drawable/iconcc" />

    <TableRow
        android:id="@+id/widget80"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/widget84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvuname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name:" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/widget81"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/etuname"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/widget82"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:" />
    </TableRow>

    <TableRow
        android:id="@+id/widget83"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/etpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="textPassword"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/widget89"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnlogin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="execute"
			android:scaleType="fitCenter"
            android:src="@drawable/loginbutton" />
    </TableRow>

    <TableRow
        android:id="@+id/widget91"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You donÂ´t have an account?" />
    </TableRow>

    <TableRow
        android:id="@+id/widget94"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnsignuo"
             android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="callsignup"
            android:scaleType="fitCenter"
            android:src="@drawable/signupbutton" />

    </TableRow>

</TableLayout>