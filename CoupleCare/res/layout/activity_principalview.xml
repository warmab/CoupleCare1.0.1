<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/todayimg"
        android:layout_width="106dp"
        android:layout_height="95dp"
        android:layout_x="33dp"
        android:layout_y="25dp" />

    <TextView
        android:id="@+id/tvtoday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="61dp"
        android:layout_y="42dp"
        android:text="Today"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tvdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="62dp"
        android:layout_y="70dp"
        android:text="TextView"
        android:textColor="@color/Black" />

    <ImageView
        android:id="@+id/sunimage"
        android:layout_width="180dp"
        android:layout_height="183dp"
        android:layout_x="70dp"
        android:layout_y="147dp" />

    <ImageButton
        android:id="@+id/btncalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="59dp"
        android:layout_y="350dp" />

    <ImageButton
        android:id="@+id/btnlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="206dp"
        android:layout_y="351dp"
        android:onClick="calllistcal" />

    <TextView
        android:id="@+id/tvdaysleft"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_x="127dp"
        android:layout_y="207dp"
        android:text="TextView"
        android:textColor="@color/Black" />

    <ImageButton
        android:id="@+id/btnfinishper"
        android:layout_width="103dp"
        android:layout_height="105dp"
        android:layout_x="192dp"
        android:layout_y="23dp"
        android:onClick="showpickerfinish" />

    <TextView
        android:id="@+id/tvdatelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="211dp"
        android:layout_y="47dp"
        android:text="TextView"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tvstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="215dp"
        android:layout_y="74dp"
        android:text="TextView"
        android:textColor="@color/Black" />

</AbsoluteLayout>